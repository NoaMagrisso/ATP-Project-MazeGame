<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<?import View.MazeDisplayer?>
<?import javafx.scene.control.CheckMenuItem?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#KeyPressed" prefHeight="450.0" prefWidth="757.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.GameController">
    <children>
        <MazeDisplayer fx:id="mazeDisplayer" height="412.0" layoutY="40.0" width="757.0" />

        <Button id="ShowSolution" layoutX="600.0" layoutY="14.0" mnemonicParsing="false" onAction="#ShowSolution" prefHeight="26.0" prefWidth="142.0" text="Show Solution" />
        <MenuBar id="menuBar" layoutX="17.0" layoutY="14.0" prefHeight="26.0" prefWidth="570.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem onAction="#New" mnemonicParsing="false" text="New" />
                        <MenuItem onAction="#Save" mnemonicParsing="false" text="Save" />
                        <MenuItem onAction="#Load" mnemonicParsing="false" text="Load" />
                    </items>
                </Menu>
                <Menu disable="true" fx:id="Options" text="Options">
                    <Menu fx:id="Properties" text="Properties">
                        <Menu text="Choose your Solving Algorithm">
                            <CheckMenuItem fx:id="DepthFirstSearch" text="DepthFirstSearch" onAction="#solverDepthFirstSearch"/>
                            <CheckMenuItem fx:id="BreathFirstSearch" text="BreathFirstSearch" onAction="#solverBreadthFirstSearch"/>
                            <CheckMenuItem fx:id="BestFirstSearch" text="BestFirstSearch" onAction="#solverBestFirstSearch"/>
                        </Menu>
                        <Menu text="Choose your Generator Algorithm">
                            <CheckMenuItem fx:id="EmptyMazeGenerator" text="EmptyMazeGenerator" onAction="#generatorEmptyMazeGenerator"/>
                            <CheckMenuItem fx:id="SimpleMazeGenerator" text="SimpleMazeGenerator" onAction="#generatorSimpleMazeGenerator"/>
                            <CheckMenuItem fx:id="MyMazeGenerator" text="MyMazeGenerator" onAction="#generatorMyMazeGenerator"/>
                        </Menu>
                        <Menu text="Number Of Threads">
                            <MenuItem fx:id="threadPool" onAction="#ThreadPool"/>
                        </Menu>
                    </Menu>
                    <RadioMenuItem fx:id="menu_Options_Mute" mnemonicParsing="false" text="Mute" disable="true"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Exit">
                    <items>
                        <MenuItem id="goHome" mnemonicParsing="false" onAction="#Home" text="Go Home" />
                        <MenuItem id="exitTheGame" mnemonicParsing="false" text="Exit the Game" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help" />
                <Menu mnemonicParsing="false" text="About" />
                <Menu id="showSolutionMenu" mnemonicParsing="false" text="Show Solution">
                    <items>
                        <MenuItem id="showSolutionItem" mnemonicParsing="false" onAction="#ShowSolution" text="Show The Solution Path" />
                    </items></Menu>
                <Menu mnemonicParsing="false" text="Reset">
                    <items>
                        <MenuItem id="returnToSart" mnemonicParsing="false" onAction="#Reset" text="Return to the start position" />
                    </items></Menu>
            </menus>
        </MenuBar>
    </children>
</AnchorPane>
